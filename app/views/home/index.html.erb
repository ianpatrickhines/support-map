<div class="cover"></div><!-- end .cover -->

    <div class="main">
        <div class="main-interior">

            <% if current_user %>

                <div class="row light-bg">
                    <div class="content">
                        <p>Hello, <%= current_user.name %> &mdash; you're almost done!</p>
                    </div>
                </div>

                <%= form_for(@user, remote: true, :html => {:class => "form edit_user"}) do |f| %>

                     <div class="row">
                        <fieldset>
                            <%= f.label :zip_code, "What's your zip code?" %>
                            <%= f.text_field :zip_code %>
                        </fieldset>

                        <fieldset>
                            <%= f.label :comment, "Why are you supporting Jake?" %>
                            <%= f.text_area :comment %>
                        </fieldset>
                    </div>

                    <div class="row light-bg center">
                        <%= f.submit "Finished! Add my endorsement.", class: "btn" %>
                    </div>
                <% end %>

            <% else %>

                <div class="row">
                    <h1 class="title">Jake for Governor</h1>
                    <h2 class="sub-title">Endorsement Map</h2>
                </div>

                <div class="row">
                    <div class="content">
                        <p>Add your name velit massa placerat tortor ut aenean cursus nec, magna eu ac.</p>
                    </div>
                </div>

                <div class="row light-bg">
                    <%= link_to "Add your name with Facebook", "/auth/facebook", id: "sign-in", class: "btn btn-facebook" %>
                </div>



            <% end %>

        </div><!--end .main-interior -->
    </div><!--end .main -->



<div id="map"></div><!--end #map -->